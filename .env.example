# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ==========================================
# EMERGENCY SERVICES
# ==========================================
# Emergency contact numbers (country-specific)
EMERGENCY_POLICE=911
EMERGENCY_FIRE=911
EMERGENCY_MEDICAL=911

# ==========================================
# PUSH NOTIFICATIONS
# ==========================================
# FCM Server Key (for sending push notifications)
# Get from: Firebase Console > Project Settings > Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key_here

# APNs Key ID and Team ID (for iOS push notifications)
# Get from: Apple Developer Console
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================
# Environment mode
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Analytics and crash reporting
CRASHLYTICS_ENABLED=true
ANALYTICS_ENABLED=false

# ==========================================
# LOCALIZATION
# ==========================================
# Default language and region
DEFAULT_LANGUAGE=en
DEFAULT_REGION=US
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,hi,ar

# ==========================================
# PERFORMANCE MONITORING
# ==========================================
# Performance monitoring endpoints
PERFORMANCE_ENDPOINT=https://your-performance-api.com/metrics
ERROR_REPORTING_ENDPOINT=https://your-error-api.com/errors

# ==========================================
# SYNC & BACKUP
# ==========================================
# Cloud backup configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
MAX_BACKUP_RETENTION_DAYS=30

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable specific features
ENABLE_DRIVING_DETECTION=true
ENABLE_EMERGENCY_FEATURES=true
ENABLE_GEOFENCING=true
ENABLE_SMART_PLACES=true
ENABLE_BATTERY_OPTIMIZATION=true
ENABLE_OFFLINE_MODE=true

# ==========================================
# DEVICE-SPECIFIC SETTINGS
# ==========================================
# OnePlus optimization settings
ONEPLUS_OPTIMIZATION_ENABLED=true
XIAOMI_OPTIMIZATION_ENABLED=true
HUAWEI_OPTIMIZATION_ENABLED=true
SAMSUNG_OPTIMIZATION_ENABLED=true

# ==========================================
# PRODUCTION OVERRIDES
# ==========================================
# These will be different in production
PRODUCTION_API_BASE_URL=https://api.groupsharing.com
STAGING_API_BASE_URL=https://staging-api.groupsharing.com
DEVELOPMENT_API_BASE_URL=http://localhost:3000

